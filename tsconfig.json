{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2018",
        "rootDir": "./src",
        "outDir": "build",
        "types": ["reflect-metadata", "node", "jest"],
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}