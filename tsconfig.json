{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2018",
        "baseUrl": "./",
        "rootDir": "./src",
        "outDir": "build",
        "types": [
            "node",
            "jest",
            "reflect-metadata"
        ], 
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "@infra": [
                "src/infrastructure/index"
            ],
             "@infra/*": [
                "src/infrastructure/*"
            ],
            "@interface": [
                "src/interface/index"
            ], 
            "@interface/*": [
                "src/interface/*"
            ], 
            "@app": [
                "src/application/index"
            ],
            "@app/*": [
                "src/application/*"
            ],
            "@domain": [
                "src/domain/index"
            ],
            "@domain/*": [
                "src/domain/*"
            ]
        },
        "plugins": [
            {
                "transform": "typescript-transform-paths"
            },
            {
                "transform": "typescript-transform-paths",
                "afterDeclarations": true
            }
        ]
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}