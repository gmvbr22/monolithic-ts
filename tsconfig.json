{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2018",
        "baseUrl": "./",
        "rootDir": "./src",
        "outDir": "build",
        "types": [
            "node",
            "jest"
        ], 
        "moduleResolution": "node",
        "esModuleInterop": true,
        "paths": {
            "@infra/*": [
                "infrastructure/*"
            ],
            "@interface/*": [
                "interface/*"
            ],
            "@app/*": [
                "application/*"
            ],
            "@domain/*": [
                "domain/*"
            ]
        },
        "plugins": [
            {
                "transform": "typescript-transform-paths"
            },
            {
                "transform": "typescript-transform-paths",
                "afterDeclarations": true
            }
        ]
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}